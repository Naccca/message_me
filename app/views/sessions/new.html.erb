<h2 class="ui center aligned large header">
  Welcome to
</h2>
<h4 class="ui center aligned medium icon header">
  <i class="circular pink comment icon"></i>
  Message Me
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "gorm"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Log in", class: "ui pink submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <a href="<%= new_user_path %>" class="ui big pink button">
        <i class="signup icon"></i>
        Sign Up
      </a>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>